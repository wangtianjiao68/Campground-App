<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		
		<h1 style="text-align: center">
			Creat a new campground!
		</h1>
		<div style ="width: 30%; margin: 20px auto;">

			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="newCamp" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newUrl" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newDes" placeholder="description">
				</div>
				<div class="form-group">
									<button class="btn btn-primary btn-lg btn-block">
					Go!!!
				</button>
				</div>
			</form>
			<a href="/campgrounds"> Back to all Campgrounds</a>
		</div>
	</div>
	<%- include ("../partials/footer") %>
</div>